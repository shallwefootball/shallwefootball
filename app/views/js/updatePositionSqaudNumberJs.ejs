		e.preventDefault();

		var $form = $(e.target);

		$.ajax({
			type        : 'PUT',
			async       : true,
			url         : "/squadNumber",
			data        : $form.serialize(),
			success     : function(data) {
				switch (data.message) {

					case "success" :
						alert("스쿼드넘버가 변경되었습니다.");
						location.reload(); break;

					case "fail" :

						alert('실패했습니다.'); break;
				}

			},
			error       : function(data, status, err) {
				console.log("error forward : "+data);
					alert('서버와의 통신이 실패했습니다.');
			}
		});

	});

</script>