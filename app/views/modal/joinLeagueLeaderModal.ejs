<div class="modal fade" id="joinLeague" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"><strong><%= user.createTeamName %></strong> 팀은 <strong><%= league.community %> <%= league.season %></strong>에 등록됩니다.</h4>
      </div>
        <form method="post" action="/league/<%= league.leagueId %>/joinLeague" role="form" enctype="multipart/form-data">
          <div class="modal-body">
            <input type="hidden" name="teamId" value="<%= user.createTeamId %>">
            <input type="hidden" name="leaderId" value="<%= user.createId %>">
            <p></p>
            <div class="form-group">
              <select class="form-control" name="position">
                <option>포지션?</option>
                <option>GK</option>
                <option>DF</option>
                <option>MF</option>
                <option>FW</option>
              </select>
            </div>
            <div class="form-group">
              <select class="form-control" name="squadNumber">
                <option selected>등번호?</option>
                <% for (var i = 1; i <= 100; i++){ %>
                  <option><%= i %></option>
                <% } %>
              </select>
            </div>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">닫기</button>
            <button type="submit" class="btn btn-primary">등록하기</button>
          </div>

        </form>

    </div>
  </div>
</div>

